# AI Spine Configuration - Development Mode
# Copy this file to .env.local and modify as needed

# Environment Configuration
DEV_MODE=true  # Set to false for production with PostgreSQL

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Endpoints (mock endpoints for development)
ZOE_ENDPOINT=http://localhost:8001/zoe
EDDIE_ENDPOINT=http://localhost:8002/eddie

# Database Configuration (used when DEV_MODE=false)
DATABASE_URL=postgresql://user:password@localhost/ai_spine

# Redis Configuration (used when DEV_MODE=false)
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
CORS_ORIGINS=["*"]
API_KEY_REQUIRED=false
API_KEY=ai-spine-dev-key-12345

# Performance Configuration
MAX_CONCURRENT_EXECUTIONS=10
EXECUTION_TIMEOUT=300
HEALTH_CHECK_INTERVAL=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090